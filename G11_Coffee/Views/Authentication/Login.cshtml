@model G11_Coffee.Models.User
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>G11 Coffee - Đăng nhập</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }
        .container {
            display: flex;
            height: 100%;
        }
        .image-side {
            flex: 1;
            background-image: url('@Url.Content("~/images/login_img.jfif")');
            background-size: cover;
            background-position: center;
        }
        .login-side {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f5f5dc;
        }
        .login-box {
            width: 300px;
            padding: 40px;
            background-color: #e5e5b5;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        h2 {
            margin-top: 40px;
            margin-bottom: 40px;
            color: #333;
            text-align: center;
        }
        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }
        button {
            width: 100%;
            padding: 10px;
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #357ae8;
        }
        .validation-message {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: -10px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="image-side"></div>
        <div class="login-side">
            <div class="login-box">
                <h2>G11 Coffee</h2>
                <form asp-action="Login" method="post">
                    <div>
                        <input asp-for="Email" placeholder="Email" required />
                        <span asp-validation-for="Email" class="validation-message"></span>
                    </div>
                    <div>
                        <input asp-for="Password" type="password" placeholder="Mật khẩu" required />
                        <span asp-validation-for="Password" class="validation-message"></span>
                    </div>
                    <button type="submit">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>